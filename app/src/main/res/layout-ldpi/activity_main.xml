<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/showNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="80dp"
        android:paddingRight="20dp"
        android:paddingBottom="50dp"
        android:text="0"
        android:textColor="@color/gray"
        android:textSize="34sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnac"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonsshape"
                android:onClick="btnClr"
                android:text="AC"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnarteks"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonsshape"
                android:onClick="btnNumberTik"
                android:text="+/-"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnyzde"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonsshape"
                android:onClick="btnYzdTik"
                android:text="%"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnblm"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/buttonsshape"
                android:onClick="btnOpTik"
                android:text="/"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="117dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonsshape"
                android:onClick="btnNumberTik"
                android:text="7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonsshape"
                android:onClick="btnNumberTik"
                android:text="8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonsshape"
                android:onClick="btnNumberTik"
                android:text="9"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnx"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonsshape"
                android:onClick="btnOpTik"
                android:text="X"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonsshape"
                android:onClick="btnNumberTik"
                android:text="4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="118dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonsshape"
                android:onClick="btnNumberTik"
                android:text="5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="113dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonsshape"
                android:onClick="btnNumberTik"
                android:text="6"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btneks"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonsshape"
                android:onClick="btnOpTik"
                android:text="-"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonsshape"
                android:onClick="btnNumberTik"
                android:text="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/buttonsshape"
                android:onClick="btnNumberTik"
                android:text="2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonsshape"
                android:onClick="btnNumberTik"
                android:text="3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnart"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonsshape"
                android:onClick="btnOpTik"
                android:text="+"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn0"
                android:layout_width="17dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonsshape"
                android:onClick="btnNumberTik"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnvr"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonsshape"
                android:text=","
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnnk"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonsshape"
                android:text="."
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnson"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/purple_700"
                android:onClick="btnSonTik"
                android:text="="
                android:textColor="@color/gray"
                android:textSize="20sp" />
        </TableRow>

    </TableLayout>

</LinearLayout>

